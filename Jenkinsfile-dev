def VERSION

pipeline {
    agent any
    
    tools {
        nodejs "node-18.3.0"
    }

    environment {
		DOCKERHUB_CREDENTIALS=credentials('dockehub')
	}

    stages {
        stage("Read version"){
            steps {
                script {
                    VERSION = sh(returnStdout: true, script: "npm pkg get version | sed 's/\"//g'")
                    echo "Version is ${VERSION}"
                }
            }
        }
        stage("Build image") {
            steps {
                sh "docker build -f Dockerfile-dev . -t sample-web-image"
                sh "docker tag sample-web-image isurusandamal/sample-web-image:${VERSION}"
                sh "docker images"
            }
        }
        stage("Upload image") {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                sh "docker push isurusandamal/sample-web-image:${VERSION}"
            }
        }
    }
    post {
		always {
			sh 'docker logout'
		}
	}

}