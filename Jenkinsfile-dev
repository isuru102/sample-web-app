pipeline {
    agent any
    
    tools {nodejs "node-18.3.0"} 

    environment {
        VERSION = "1.0.0"
    }

    stages {
        stage("Build and push docker non-release"){
            steps {
                script {
                    def version = sh(returnStdout: true, script: "npm pkg get version | sed 's/\"//g'")
                    // echo "Version is ${version}"
                }
            }
        }
        stage("Prepare") {
            steps {
                echo "Version is ${version}"
            }
        } 
    }
}