pipeline {
    agent any
    
    tools {
        // nodejs "node-18.3.0"
        docker "docker"
    } 

    environment {
        VERSION = "1.0.0"
    }

    stages {
        stage("Read version"){
            steps {
                script {
                    def version = sh(returnStdout: true, script: "npm pkg get version | sed 's/\"//g'")
                    echo "Version is ${version}"
                }
            }
        }
        stage("Build image") {
            steps {
                sh "docker build -t sample-web-image:${version} -f Dockerfile-dev ."
            }
        } 
    }
}