def VERSION

pipeline {
    agent any
    
    tools {
        nodejs "node-18.3.0"
        // docker "docker"
    }

    stages {
        stage("Read version"){
            steps {
                script {
                    VERSION = sh(returnStdout: true, script: "npm pkg get version | sed 's/\"//g'")
                    // echo "Version is ${VERSION}"
                }
            }
        }
        stage("Build image") {
            steps {
                echo "Version is ${VERSION}"
                sh "docker build -f Dockerfile-dev . -t sample-web-image:${VERSION}"
                sh "docker images"
            }
        } 
    }
}