def VERSION

pipeline {
    agent any
    
    tools {
        nodejs "node-18.3.0"
        // docker "docker"
    }

    stages {
        stage("Read version"){
            steps {
                script {
                    VERSION = sh(returnStdout: true, script: "npm pkg get version")
                    echo "Version is ${VERSION}"
                }
            }
        }
        stage("Build image") {
            steps {
                sh "docker build -t sample-web-image:${VERSION} -f Dockerfile-dev ."
                sh "docker images"
            }
        } 
    }
}